<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#FFFFFF" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp" android:gravity="center">
    <!--  Contenedor para el eje X  -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="16dp" android:gravity="center">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="X:" android:textSize="18sp" android:textColor="#000" android:layout_gravity="center_vertical"/>
            <ProgressBar android:id="@+id/xProgressBar" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:max="100" android:progressTint="#FF5722" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@android:style/Widget.ProgressBar.Horizontal"/>
        </LinearLayout>
        <TextView android:id="@+id/xTapCounter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Taps: 0" android:textSize="16sp" android:textColor="#000" android:layout_gravity="center"/>
    </LinearLayout>
    <!--  Contenedor para el eje Y  -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="16dp" android:gravity="center">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Y:" android:textSize="18sp" android:textColor="#000" android:layout_gravity="center_vertical"/>
            <ProgressBar android:id="@+id/yProgressBar" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:max="100" android:progressTint="#4CAF50" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@android:style/Widget.ProgressBar.Horizontal"/>
        </LinearLayout>
        <TextView android:id="@+id/yTapCounter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Taps: 0" android:textSize="16sp" android:textColor="#000" android:layout_gravity="center"/>
    </LinearLayout>
    <!--  Contenedor para el eje Z  -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:text="Z:" android:textColor="#000" android:textSize="18sp"/>
            <ProgressBar android:id="@+id/zProgressBar" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:max="100" android:progressTint="#2196F3" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@android:style/Widget.ProgressBar.Horizontal"/>
        </LinearLayout>
        <TextView android:id="@+id/zTapCounter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Taps: 0" android:textSize="16sp" android:textColor="#000" android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>